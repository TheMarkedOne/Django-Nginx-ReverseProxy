pipeline {
    agent any
    
    stages {
        stage('---STARTING---') {
            steps {
                echo "STARTING!!!"
            }
        }
        
        stage('---TESTING---') {
            steps {
                echo "TESTING !!!"
            }
        }
        
        stage('---BUILD/DEPLOY---') {
            steps {
                sh 'docker-compose up -d' // Start Docker containers using docker-compose
            }
        }
    }
}
