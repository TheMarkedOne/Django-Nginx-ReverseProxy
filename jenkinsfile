pipeline {
    agent any
    
    stages {
        stage('Install Dependencies') {
            steps {
                sh 'pip install -r requirements.txt' // Install project dependencies
            }
        }
        
        stage('Run Tests') {
            steps {
                sh 'python manage.py test' // Run Django tests
            }
        }
        
        stage('Build and Deploy') {
            steps {
                sh 'docker-compose up -d' // Start Docker containers using docker-compose
            }
        }
    }
}
